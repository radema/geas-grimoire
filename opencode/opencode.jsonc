{
  "$schema": "https://opencode.ai/config.json",
  // Theme configuration
  // Use this for user-wide preferences such as themes, providers and keybindings
  "theme": "opencode",
  "autoupdate": "notify",
  "default_agent": "data-science-brainstormer",
  "context": {
    "patterns": [
      "Quality-first development with strong testing emphasis",
      "Clean code patterns and architecture prioritized",
      "uv for package management, not poetry"
    ],
    "expertise": {
      "primary": "Python with scientific computing (numpy/scipy)",
      "secondary": "Software architecture and design patterns"
    }
  },
  "session": {
    "defaults": {
      "ask_before_write": true,
      "confirm_overwrite": true,
      "show_progress": true
    },
    "interaction": {
      "clarifying_questions": "enabled",
      "offer_continue": true
    }
  },
  "skills": {
    "auto_load": [
      "code-reviewer"
    ],
    "context": {
      "code-reviewer": {
        "type": "analysis",
        "read_only": true,
        "generates_report": true,
        "scoring": true
      }
    }
  },
  "command": {
    "bolt-spec": {
      "template": "Refine requirements into detailed specs through iterative clarification",
      "description": "Specification phase",
      "agent": "product-owner"
    },
    "bolt-arch": {
      "template": "Create architecture decisions and implementation plan",
      "description": "Architecture phase",
      "agent": "tech-architect"
    },
    "bolt-code": {
      "template": "Execute implementation using TDD approach",
      "description": "Implementation phase",
      "agent": "developer"
    },
    "bolt-verify": {
      "template": "Verify quality, test coverage, and prepare for merge",
      "description": "Verification phase",
      "agent": "qa-engineer"
    },
    "bolt-hotfix": {
      "template": "Execute targeted bug fix",
      "description": "Quick bug fix",
      "agent": "senior-developer"
    },
    "test": {
      "template": "uv run pytest --cov=ras_balancer --cov-report=html",
      "description": "Run tests with coverage",
      "agent": "build"
    },
    "quality": {
      "template": "uv run black . && uv run flake8 . && uv run mypy .",
      "description": "Run all quality checks",
      "agent": "build"
    }
  },
  "permission": {
    "bash": {
      "*": "ask",
      "git *": "allow",
      "rm *": "ask",
      "grep *": "allow",
      "uv run pytest *": "allow",
      "uv run black *": "allow",
      "uv run mypy *": "allow",
      "uv run flake8 *": "allow"
    }
  },
  "watcher": {
    "ignore": [
      "dist/**",
      ".git/**"
    ]
  }
}