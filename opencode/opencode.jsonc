{
  "$schema": "https://opencode.ai/config.json",
  "theme": "github",
  "autoupdate": "notify",
  "default_agent": "data-science-brainstormer",
  "skills": {
    "context": {
      "code-reviewer": {
        "type": "analysis",
        "read_only": true,
        "generates_report": true,
        "scoring": true
      },
      "technical-doc-writer": {
        "type": "generation",
        "style_guide": "google",
        "format": "markdown",
        "maintain_history": true
      },
      "tdd-implementation": {
        "type": "workflow_enforcement",
        "workflow": "red-green-refactor",
        "test_runner": "pytest",
        "strict_mode": true,
        "on_fail": "halt"
      }
    }
  },
  "command": {
    "bolt-spec": {
      "template": "Refine requirements into detailed specs through iterative clarification",
      "description": "Specification phase",
      "agent": "product-owner"
    },
    "bolt-arch": {
      "template": "Create architecture decisions and implementation plan",
      "description": "Architecture phase",
      "agent": "tech-architect"
    },
    "bolt-code": {
      "template": "Execute implementation using TDD approach",
      "description": "Implementation phase",
      "agent": "developer"
    },
    "bolt-verify": {
      "template": "Verify quality, test coverage, and prepare for merge",
      "description": "Verification phase",
      "agent": "qa-engineer"
    },
    "bolt-hotfix": {
      "template": "Execute targeted bug fix",
      "description": "Quick bug fix",
      "agent": "senior-developer"
    },
    "test": {
      "template": "uv run pytest --cov=ras_balancer --cov-report=html",
      "description": "Run tests with coverage",
      "agent": "build"
    },
    "quality": {
      "template": "uv run black . && uv run flake8 . && uv run mypy .",
      "description": "Run all quality checks",
      "agent": "build"
    }
  },
  "permission": {
    "bash": {
      "git *": "allow",
      "grep *": "allow",
      "ls": "allow",
      "uv run pytest *": "allow",
      "uv run ruff *": "allow",
      "uv run black *": "allow",
      "uv run flake8 *": "allow",
      "uv run mypy *": "allow",
      "rm *": "ask",
      "*": "ask"
    },
    "edit": {
      "**/*.py": "allow",
      "**/*.sql": "allow",
      "tests/**/*.py": "allow",
      "docs/**/*.md": "allow",
      "*.md": "allow",
      "pyproject.toml": "ask",
      "uv.lock": "deny",
      "~/.ssh/**": "deny",
      "~/.aws/**": "deny",
      "/etc/**": "deny",
      "**/.env": "deny",
      "*": "ask"
    },
    "write": {
      "~/.ssh/**": "deny",
      "~/.aws/**": "deny",
      "/etc/**": "deny",
      "**/.env": "deny",
      "**/*.py": "allow",
      "**/*.sql": "allow",
      "tests/**": "allow",
      "docs/**": "allow",
      "output/**": "allow",
      "*": "ask"
    }
  },
  "watcher": {
    "ignore": [
      "dist/**",
      ".git/**",
      "__pycache__/**",
      ".pytest_cache/**",
      "htmlcov/**"
    ]
  }
}